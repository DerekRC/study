<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>无标题文档</title>
<style>
	*{padding:0; margin:0;}	
	li{list-style: none;}
	.cont{ width: 800px; height: 450px; border: #ccc solid 1px; margin:50px auto; position: relative;overflow: hidden;}
	.cont ul{width: 3200px;position: absolute;left: 0;top: 0; }
	.cont ul li{ float: left;}
	.cont ul li.cur{ background: #0af; }
	.cont img{ width: 100%;height: 100%;}
	
	.cont ol{ position: absolute; left:50%;bottom:20px; margin-left:-35px;}
	.cont ol li{width:10px;height:10px; background:#fff; float: left;margin-right:10px; border-radius:50%; cursor: pointer;}
	.cont ol li.cur{ background: #0af; }
	
	.cont span{position: absolute;top:50%; margin-top: -30px; width:40px; height:60px; background:red; cursor: pointer;}
	.cont span.prev{left: 0; background:url(img/prev.png) }
	.cont span.next{right: 0;background:url(img/next.png)}
	
	
</style>
<script src="js/jquery-1.10.1.min.js"></script>
<script>
$(function(){
	var clicknum=0;
	
	$('.cont ol li').mouseover(function(){
		var z=$(this).index()//li索引值 Z代表第几个
		$(this).addClass('cur').siblings().removeClass('cur');
		$('.cont ul').animate({left:-800*z});
		
		clicknum=z
	})
	
	$('.cont .next').click(function(){
		
		if(clicknum<3){
			clicknum++
		}else{
			clicknum=0
		}
		
		
		$('.cont ol li').eq(clicknum).addClass('cur').siblings().removeClass('cur')
		$('.cont ul').animate({left:-800*clicknum});
	})
	
	$('.cont .prev').click(function(){
		
		if(clicknum>0){
			clicknum--
		}else{
			clicknum=3
		}
		
		
		$('.cont ul').animate({left:-800*clicknum});
		$('.cont ol li').eq(clicknum).addClass('cur').siblings().removeClass('cur')
	})
	
	
})		
</script>
</head>

<body>
<div class="cont">
<ul>
	<li><img src="img/1.jpg" ></li>
	<li><img src="img/2.jpg"></li>
	<li><img src="img/3.jpg"></li>
	<li><img src="img/4.jpg"></li>
</ul>

    <span class="prev"></span>
    <span class="next"></span>
    
    <ol>
    	<li class="cur"></li>
    	<li></li>
    	<li></li>
    	<li></li>
    </ol>
</div>

</body>
</html>
